{
  "exclude": [
      "./node_modules"
  ],
  "compilerOptions": {
    "target": "ES2020",
    "strict": true,
    "module": "commonjs",
    "jsx": "preserve",
    "esModuleInterop": true,
    "sourceMap": true,
    "allowJs": true,
    "lib": [
      "es6",
    ],
    "rootDir": "./src",
    "outDir": "./dist",
    "moduleResolution": "node",
    "baseUrl": "./",
    "paths": {
        "@commons/*": [
            "../commons/*"
        ]
    },
    "declaration": true,
    "composite": true
  },
}